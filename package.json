{
    "name": "miin-app-server",
    "version": "1.1.0",
    "main": "index.ts",
    "license": "MIT",
    "scripts": {
        "start": "dotenvx run -f .env -- nodemon ./app/index.ts",
        "prod": "dotenvx run -f .env -- pm2 start ./dist/app/index.js -f --name APP_API --watch --ignore-watch='node_modules'",
        "build": "tsc",
        "lint": "eslint --fix",
        "db:update": "drizzle-kit push",
        "generate": "drizzle-kit generate",
        "migrate": "drizzle-kit migrate",
        "seed": "tsc && dotenvx run --env-file=.env -- node ./dist/drizzle/seed.js",
        "test": "dotenvx run --env-file=.env -- nodemon scripts/seed.ts",
        "help": "dotenvx -f --help"
    },
    "dependencies": {
        "@aws-sdk/client-location": "^3.665.0",
        "@aws-sdk/client-s3": "^3.617.0",
        "@aws-sdk/client-ses": "^3.549.0",
        "@dotenvx/dotenvx": "^1.14.1",
        "@pmveme/miin-db": "^1.1.32",
        "@trycourier/courier": "^6.2.1",
        "axios": "^1.6.8",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "drizzle-orm": "^0.38.3",
        "expo-server-sdk": "^3.11.0",
        "express": "^4.19.1",
        "express-rate-limit": "^7.2.0",
        "jsonwebtoken": "^9.0.2",
        "lodash": "^4.17.21",
        "moment": "^2.30.1",
        "multer": "^1.4.5-lts.1",
        "nanoid": "^3.0.0",
        "pdfkit": "^0.15.0",
        "pg": "^8.11.3",
        "randomstring": "^1.3.0",
        "redis": "^4.7.0",
        "sharp": "^0.33.4",
        "uuid": "^9.0.1",
        "yup": "^1.4.0"
    },
    "engines": {
        "node": "20"
    },
    "devDependencies": {
        "@eslint/js": "^9.10.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/lodash": "^4.17.10",
        "@types/multer": "^1.4.11",
        "@types/node": "^22.5.5",
        "@types/pdfkit": "^0.13.4",
        "@types/pg": "^8.11.4",
        "@types/randomstring": "^1.1.12",
        "@types/uuid": "^9.0.8",
        "drizzle-kit": "^0.30.1",
        "eslint": "^8.57.0",
        "globals": "^15.9.0",
        "knip": "^5.30.2",
        "nodemon": "^3.1.0",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.5.0"
    }
}
